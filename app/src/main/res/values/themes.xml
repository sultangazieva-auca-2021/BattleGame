<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/back_color</item>
        <item name="colorPrimaryVariant">@color/back_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleCentered">true</item>
        <item name="titleTextStyle">@style/menuItemFont</item>
        <item name="fontFamily">casual</item>
        <item name="textAllCaps">true</item>
        <item name="android:windowAnimationStyle">@style/SlideAnim</item>
        <item name="android:itemTextAppearance">@style/menuItemFont</item>
        <item name="android:itemBackground">@color/back_color</item>
        <!--        <item name="actionOverflowButtonStyle">@drawable/baseline_menu_24</item>-->
    </style>

    <style name="SlideAnim" parent="@android:style/Animation.Activity" >
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_down</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>

    <!--    <style name="ThreeDotsStyle" >-->
    <!--        <item name="tint">#0B2FF8</item>-->
    <!--    </style>-->

    <style name="menuItemFont" parent="@android:style/TextAppearance.Widget.IconMenu.Item" >
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/yellow</item>
    </style>

    <style name="pointTextStyle" >
        <item name="android:text">@string/start_point</item>
        <item name="android:textSize">@dimen/points_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonStylePlayer1" >
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_button1</item>
    </style>

    <style name="buttonStylePlayer1.buttonStylePlayer2" >
        <item name="android:background">@drawable/rounded_button2</item>
    </style>

    <style name="playerNameFont" >
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="setUpTextStyle" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>
